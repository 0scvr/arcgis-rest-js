{
  "name": "arcgis-core",
  "version": "1.0.0",
  "description": "Common methods and utilities for arcgis-rest-js.",
  "main": "dist/node/bundle.cjs.js",
  "browser": "dist/browser/bundle.umd.js",
  "module": "dist/esm/index.js",
  "js:next": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "author": "",
  "license": "Apache-2.0",
  "dependencies": {
    "es6-promise": "^4.1.1",
    "form-data": "^2.2.0",
    "isomorphic-fetch": "^2.2.1",
    "url-search-params": "^0.9.0"
  },
  "scripts": {
    "build": "npm run build:node && npm run build:umd && npm run build:esm",
    "build:esm": "tsc -p ./tsconfig.json",
    "postbuild:esm": "npm run replace:form-data && npm run replace:url-search-params",
    "build:umd": "rollup -c ../../rollup.config.umd.js",
    "build:node": "rollup -c ../../rollup.config.node.js",
    "replace:form-data": "replace-in-file \"form-data\" \"./browser/form-data\" ./dist/esm/utils/encode-form-data.js --verbose",
    "replace:url-search-params": "replace-in-file \"url-search-params\" \"./browser/url-search-params\" ./dist/esm/utils/encode-query-string.js --verbose"
  }
}
